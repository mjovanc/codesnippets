doctype html
html
  head
    title= sitetitle
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div.d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.box-shadow
      h5.my-0.mr-md-auto.font-weight-normal
        a(href='/' class='text-dark') #{sitetitle}
      nav.my-2.my-md0.mr-md3
        a(class='p-2 text-dark' href='/snippets') Snippets
        if username
          a(class='p-2 text-dark' href='/snippets/new') Add Snippet
      if username
        a(class='px-2 btn btn-outline-danger mr-1' href='/users/logout') Logout
      else
        a(class='px-2 btn btn-outline-dark mr-1' href='/users/login') Login
        a(class='px-2 btn btn-outline-dark' href='/users/new') Register
    main.container
      block content
      block register_user
      block login_user
      block create_snippet
      block edit_snippet
      block remove_snippet
      block index_snippet
      block view_snippet
      block error_403
      block error_404
      block error_500
      footer.pt-4.my-md-5.pt-md-5.border-top
        div.row
          div.col-12.col-md
            img(class='mb-2' src='https://image.flaticon.com/icons/svg/37/37631.svg' alt='' width='24' height='24')
            small.d-block.mb-3.text-muted &copy; 2020
            small.d-block.mb-3.text-muted Created by 
              a(href='https://github.com/mjovanc' target='blank') Marcus Cvjeticanin
          div.col-6.col-md
            h5 Code Snippets
            ul.list-unstyled.text-small
              li
                a(class='text-muted' href='#') About Us
              li
                a(class='text-muted' href='#') Contact
              li
                a(class='text-muted' href='#') Security & privacy
              li
                a(class='text-muted' href='#') Jobs
          div.col-6.col-md
            h5 Developers
            ul.list-unstyled.text-small
              li
                a(class='text-muted' href='#') Developers site
              li
                a(class='text-muted' href='#') Beta program
              li
                a(class='text-muted' href='#') Blog
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js")